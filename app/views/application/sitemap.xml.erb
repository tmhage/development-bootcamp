<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= root_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "static_pages", "home.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  <url>
    <loc><%= courses_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "programs", "index.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= courses_beginner_bootcamp_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "programs", "level_one.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= courses_intermediate_bootcamp_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "programs", "level_two.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= courses_advanced_bootcamp_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "programs", "level_three.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= courses_frontend_bootcamp_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "programs", "frontend_bootcamp.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= enroll_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "orders", "new.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= contact_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "static_pages", "contact.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= team_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "static_pages", "team.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= newsletter_url %></loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "static_pages", "newsletter.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= root_url %>sponsors/new</loc>
    <lastmod><%= File.ctime(Rails.root.join("app", "views", "sponsors", "new.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= root_url %>blog</loc>
    <lastmod><%= Post.all.order("updated_at DESC").first.updated_at.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.2</priority>
  </url>
  <% Post.published.each do |post| %>
    <url>
      <loc><%= root_url %>blog/<%= post.slug %></loc>
      <lastmod><%= post.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
  <% Page.published.each do |page| %>
    <url>
      <loc><%= page_url(page) %></loc>
      <lastmod><%= page.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
</urlset>
